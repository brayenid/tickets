<main class="p-4 space-y-4">
  {{> breadcrumbs }}

  {{!-- Edit Event --}}
  <section class="bg-white p-6 shadow-sm rounded-lg" id="detail">
    <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">Detail : {{ vendor.name }}</h2>
    {{!-- Keep create vendor id to avoid repetitive css --}}
    <form id="create-vendor" class="p-4" data-id="{{ vendor.id }}">
      <div class="grid gap-2 sm:grid-cols-2 sm:gap-3">
        <div>
          <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Nama</label
          >
          <input
            type="text"
            name="name"
            id="name"
            placeholder="Masukan nama vendor"
            required=""
            value="{{ vendor.name }}"
            disabled
          />
        </div>
        <div>
          <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Email</label
          >
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Masukan alamat email vendor yang valid"
            required=""
            value="{{ vendor.email }}"
            disabled
          />
        </div>
        <div>
          <label for="phone" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >No. Telepon</label
          >
          <input
            type="tel"
            name="phone"
            id="phone"
            class="input-styled"
            placeholder="Masukan nomor telepon vendor"
            required=""
            value="{{ vendor.phone }}"
            disabled
          />
        </div>
        <div>
          <label for="address" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Alamat</label
          >
          <input
            type="text"
            name="address"
            id="address"
            class="input-styled"
            placeholder="Masukan alamat vendor"
            required=""
            value="{{ vendor.address }}"
            disabled
          />
        </div>
        <div>
          <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white" for="birth"
            >Didirikan/Waktu Bergabung
          </label>
          <input
            type="date"
            name="birth"
            id="birth"
            class="input-styled"
            placeholder="Didirikan/waktu bergabung"
            required=""
            value="{{ vendor.birth }}"
            disabled
          />
        </div>
      </div>
      <div class="flex justify-end mt-4 gap-2">
        {{#if offlineSaleCapability}}
        <button type="button" id="offline-cap" class="red" onclick="setOfflineCapability()">
          Non-Aktif Penjualan Offline
        </button>
        {{else}}
        <button
          type="button"
          id="offline-cap"
          class="primary-lite"
          onclick="setOfflineCapability()"
        >
          Aktifkan Penjualan Offline
        </button>
        {{/if}}
        <button type="submit" id="add-vendor-btn" class="cursor-not-allowed" disabled>
          Perbaharui
        </button>
      </div>
    </form>
  </section>
</main>

<script src="/script/dashboard/vendors/vendor-detail.js"></script>
