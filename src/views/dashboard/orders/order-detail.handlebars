<main class="p-4">
  {{> breadcrumbs }}
  <div class="flex gap-4 items-start">
    <div class="detail flex-[2.4] rounded-lg space-y-4 overflow-x-auto bg-white p-6">
      <h2 class="mb-2 text-xl font-bold text-gray-700 dark:text-white">Detail Order</h2>
      <div class="border border-gray-200 rounded-lg">
        <table
          class="w-full text-xs sm:text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 overflow-hidden rounded-lg"
        >
          <tbody>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <th
                scope="row"
                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
              >
                Order ID
              </th>
              <td class="px-6 py-4">: {{ order.id }}</td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <th
                scope="row"
                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
              >
                Nama Event
              </th>
              <td class="px-6 py-4">: {{ order.eventName }}</td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <th
                scope="row"
                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
              >
                Status
              </th>
              <td class="px-6 py-4">: {{ order.status }}</td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <th
                scope="row"
                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
              >
                Pembayaran Via
              </th>
              <td class="px-6 py-4">: {{ order.source }}</td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <th
                scope="row"
                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
              >
                Link Bayar
              </th>
              <td class="px-6 py-4">
                :
                <a
                  class="text-primary-600 hover:underline"
                  href="{{ order.redirectUrl }}"
                  target="_blank"
                  >Midtrans</a
                >
              </td>
            </tr>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <th
                scope="row"
                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
              >
                Dibuat Pada
              </th>
              <td class="px-6 py-4">: {{formatISODate order.createdAt}}</td>
            </tr>
            <tr class="bg-white dark:bg-gray-800">
              <th
                scope="row"
                class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
              >
                Diperbaharui Pada
              </th>
              <td class="px-6 py-4">: {{formatISODate order.updatedAt}}</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div
        id="accordion-color"
        data-accordion="collapse"
        data-active-classes="bg-primary-100 dark:bg-gray-800 text-primary-600 dark:text-white"
      >
        <h2 id="accordion-color-heading-1">
          <button
            class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-500 border bg-white border-gray-200 rounded-t-xl dark:border-gray-700 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 gap-3"
            data-accordion-target="#accordion-color-body-1"
            aria-expanded="false"
            aria-controls="accordion-color-body-1"
          >
            <span>Item Pembelian</span>
            <svg
              data-accordion-icon
              class="w-3 h-3 rotate-180 shrink-0"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 10 6"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5 5 1 1 5"
              />
            </svg>
          </button>
        </h2>
        <div id="accordion-color-body-1" class="hidden" aria-labelledby="accordion-color-heading-1">
          <div class="border border-y-0 border-gray-200 dark:border-gray-700 dark:bg-gray-900">
            <table
              class="w-full text-xs sm:text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 overflow-hidden rounded-lg"
            >
              <thead
                class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
              >
                <tr>
                  <th scope="col" class="px-6 py-3">Transaction ID</th>
                  <th scope="col" class="px-6 py-3">Kuantitas</th>
                  <th scope="col" class="px-6 py-3">Harga</th>
                </tr>
              </thead>
              <tbody>
                {{#each order.items}}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                  <td scope="row" class="px-6 py-4">
                    {{ id }}
                  </td>
                  <td class="px-6 py-4">{{ quantity }}</td>
                  <td class="px-6 py-4">{{addCurrencySeparator amount }}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="text-right pt-2">
        <a href="/dashboard/tickets?search={{ order.id }}" class="link-styled">Lihat Tiket</a>
      </div>
    </div>
  </div>
</main>
